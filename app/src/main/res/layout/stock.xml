<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    tools:showIn="@layout/stock_app_bar">

    <TextView
        android:id="@+id/ingredientType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="STOK"
        android:textColor="#FFFF"
        android:textSize="28dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/food1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="72dp"
        android:text="Ürün"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_below="@+id/food1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/button_onoff_indicator_off" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_alignTop="@+id/line"
        android:layout_marginStart="10dp">

        <LinearLayout
            android:id="@+id/recipe_list_with_approach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ingredient_add"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/scrollView"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ingredient_add_name"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ingredient"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/gallery_thumb"
                android:hint="Ürün"
                android:textAlignment="viewStart"
                android:textSize="8dp"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ingredient_add_amount"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/amount"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/gallery_thumb"
                android:hint="Miktar"
                android:textAlignment="viewStart"
                android:textSize="8dp"
                android:typeface="monospace" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ingredient_add_expiredate"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/expiredate"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/gallery_thumb"
                android:hint="SKT"
                android:textAlignment="viewStart"
                android:textSize="8dp"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ingredient_add_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Miktar"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="40dp"
        android:text="SKT"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:typeface="monospace" />


</RelativeLayout>
